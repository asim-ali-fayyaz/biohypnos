@layout AdminLayout
@page "/admin/feedback"
<h3>Feedback</h3>
<div class="container-fluid mt-5 mb-5 min-vh-100">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body shadow">
                    @if (entFeedBack != null)
                    {
                        <table class="table table-bordered small">

                            <tr class="bg-primary text-light">
                                
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Feedback</th>
                                <th>Date</th>
                            </tr>

                            @foreach (var item in entFeedBack)
                            {

                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Feedback</td>
                                    <td>@item.DateTime</td>                        
                                    
                                </tr>
                            }

                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    List<EntFeedBack> entFeedBack = new List<EntFeedBack>();

    protected override void OnInitialized()
    {
        entFeedBack = DalCRUD.GetAllFeedback();
        base.OnInitialized();
    }

}
