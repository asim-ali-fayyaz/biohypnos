@layout AdminLayout
@page "/patientsinformation"


<div class="container-fluid mt-5 mb-5 min-vh-100">
    <div class="row">
        <div class="col-lg-12">
          <div class="card">
              <div class="card-body shadow">
                    <h4>Patients Information</h4>
                    @if (ListPatientsInfo != null)
                    {
                        <table class="table table-bordered small">

                            <tr class="bg-primary text-light">
                                <th>Date</th>
                                <th>First Name</th>
                                <th>Gender</th>
                                <th>Race</th>
                                <th>Ethnicity</th>
                                <th>Neck Size</th>
                                <th>BMI</th>
                                <td>Action</td>
                            </tr>

                            @foreach (var item in ListPatientsInfo)
                            {

                                <tr>
                                    <td>@item.CreationDateTime</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Race</td>
                                    <td>@item.Ethnicity</td>
                                    <td>@item.NeckSize</td>
                                    <td>@item.BMI</td>
                                    <td>
                                        <a class="nav-link text-primary small" href="details/@item.UserId" target="_blank">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }

                        </table>
                    }
              </div>
          </div>
        </div>
    </div>
</div>



@code {
    private List<EntPatientsInfo> ListPatientsInfo{ get; set; } = new List<EntPatientsInfo>();

    protected override void OnInitialized()
    {
        ListPatientsInfo = DalCRUD.GetPatientsInfo();
        base.OnInitialized();
    }

}
